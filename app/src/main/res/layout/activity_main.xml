<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorMainBackground">



    <TextView
        android:id="@+id/mainDisplayRes"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/main_display"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainDisplayOp" />

    <TextView
        android:id="@+id/mainDisplayOp"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/main_display"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainDisplayRes">

        <Button
            android:id="@+id/button7"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="9" />

        <Button
            android:id="@+id/buttondiv"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/button4"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/buttonmul"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button1"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/buttonmin"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/buttonpoint"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="." />

        <Button
            android:id="@+id/button0"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/buttonequals"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="=" />

        <Button
            android:id="@+id/buttonplu"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="150sp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mainDisplayOp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonclear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Clear" />

        <Button
            android:id="@+id/buttonback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BACK" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>